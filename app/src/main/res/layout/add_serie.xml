<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:background="@drawable/hullk">

    <EditText android:id="@+id/serie_name" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Serie Name"
        android:paddingTop="40dp"
        android:maxLines="1"
        android:singleLine="true" />


    <Button android:id="@+id/add_serie_button" style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:text="Add"
        android:textStyle="bold"
        android:onClick="addSerieToDatabase"/> <!--call function login in MainActivity when pressed-->



</LinearLayout>